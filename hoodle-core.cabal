Name:		hoodle-core
Version:	0.6.999
Synopsis:	Core library for hoodle
Description: 	Hoodle is a pen notetaking program written in haskell. 
                hoodle-core is the core library written in haskell and 
                using gtk2hs
Homepage:       http://ianwookim.org/hoodle
License: 	BSD3
License-file:	LICENSE
Author:		Ian-Woo Kim
Maintainer: 	Ian-Woo Kim <ianwookim@gmail.com>
Category:       Application
Tested-with:    GHC == 7.0
Build-Type: 	Custom
Cabal-Version:  >= 1.8
data-files:     template/*.html.st
                resource/*.png
                CHANGES
                Config.hs
Source-repository head
  type: git
  location: http://www.github.com/wavewave/hoodle-core

Flag Poppler
  Description: Enable poppler support
  Default:     True


Library
  hs-source-dirs: lib
  ghc-options: 	-Wall -funbox-strict-fields -fno-warn-unused-do-bind
  ghc-prof-options: -caf-all -auto-all

  if flag(poppler) 
    Build-Depends:   base == 4.*, 
                     mtl == 2.*,
                     directory == 1.*,
                     filepath == 1.*, 
                     strict == 0.3.*,
                     gtk == 0.12.*, 
                     cairo == 0.12.*,
                     coroutine-object >= 0.0.999 && < 0.2, 
                     -- monad-coroutine == 0.7.*, 
                     transformers == 0.3.*,
                     transformers-free == 1.0.*,
                     xournal-types >= 0.4.0.999 && < 0.5,
                     xournal-parser == 0.4.*,
                     xournal-render >= 0.6.999 && < 0.8,
                     xournal-builder >= 0.1.1 && < 0.2,
                     containers == 0.4.*,
                     template-haskell == 2.*,
                     bytestring == 0.9.*, 
                     double-conversion == 0.2.*,
                     fclabels == 1.1.*,
                     cmdargs >= 0.7 && <= 0.10,
                     configurator == 0.2.*,
                     poppler == 0.12.*, 
                     time >= 1.2 && < 1.5, 
                     TypeCompose == 0.9.*, 
                     Diff == 0.1.*, 
                     dyre == 0.8.*, 
                     cereal == 0.3.5.*, 
                     base64-bytestring == 0.1.*
  else 
    Build-Depends:   base == 4.*, 
                     mtl == 2.*,
                     directory == 1.*,
                     filepath == 1.*, 
                     strict == 0.3.*,
                     gtk == 0.12.*, 
                     cairo == 0.12.*,
                     coroutine-object >= 0.0.999 && < 0.2,
                     -- monad-coroutine == 0.7.*, 
                     transformers == 0.3.*,
                     transformers-free == 1.0.*,
                     xournal-types >= 0.4.0.999 && < 0.5 ,
                     xournal-parser == 0.4.*,
                     xournal-render >= 0.6.999 && < 0.8,
                     xournal-builder >= 0.1.1 && < 0.2,
                     containers == 0.4.*,
                     template-haskell == 2.*,
                     bytestring == 0.9.*, 
                     double-conversion == 0.2.*,
                     fclabels == 1.1.*,
                     cmdargs >= 0.7 && <= 0.10,
                     configurator == 0.2.*, 
                     time == 1.2.*, 
                     TypeCompose == 0.9.*, 
                     Diff == 0.1.*, 
                     dyre == 0.8.*, 
                     cereal == 0.3.5.*, 
                     base64-bytestring == 0.1.*
  Exposed-Modules: 
                   -- Control.Monad.Coroutine
                   Hoodle.Script
                   Hoodle.Script.Hook
                   Hoodle.Script.Coroutine
                   Hoodle.Type
                   Hoodle.Type.Alias 
                   Hoodle.Type.Event 
                   Hoodle.Type.Enum
                   Hoodle.Type.Clipboard
                   Hoodle.Type.Canvas
                   Hoodle.Type.Coroutine
                   Hoodle.Type.PageArrangement 
                   Hoodle.Type.XournalState
                   Hoodle.Type.Window
                   Hoodle.Type.Undo 
                   Hoodle.Type.Predefined 
                   Hoodle.View.Draw
                   Hoodle.View.Coordinate
                   Hoodle.GUI
                   Hoodle.GUI.Menu
                   Hoodle.ModelAction.Adjustment
                   Hoodle.ModelAction.Pen 
                   Hoodle.ModelAction.Page
                   Hoodle.ModelAction.Eraser
                   Hoodle.ModelAction.Select
                   Hoodle.ModelAction.File
                   Hoodle.ModelAction.Window
                   Hoodle.ModelAction.Layer
                   Hoodle.Coroutine
                   Hoodle.Coroutine.Callback
                   Hoodle.Coroutine.Draw
                   Hoodle.Coroutine.EventConnect
                   Hoodle.Coroutine.Default
                   Hoodle.Coroutine.Pen
                   Hoodle.Coroutine.Eraser
